<div class="contents row">
  <% @products.each do |product| %>
    <div class="content_post" style="background-image: url(<%= product.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', "/products/#{product.id}", method: :get %>
          </li>
          <li>
            <%= link_to '編集', "/products/#{product.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to '削除', "/products/#{product.id}", method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= simple_format(product.text) %></p>
      <span class="name">
        <%= product.name %>
      </span>
    </div>
  <% end %>
</div>